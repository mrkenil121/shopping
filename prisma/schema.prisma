generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("customer") // 'admin' or 'customer'
  createdAt DateTime @default(now())
  orders    Order[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  wsCode      Int
  salesPrice  Float
  mrp         Float
  packageSize Int
  tags        String[]
  category    String
  images      String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  productIds  Int[]
  totalAmount Float
  status      String   @default("pending") // 'pending', 'confirmed'
  createdAt   DateTime @default(now())
}